<div class="container mt-4">
    <div class="row">
      <div class="col">
        <a href="/download/<%= search %>" class="btn btn-primary">Descargar Excel</a>
      </div>
      <div class="col text-end">
        <ul class="list-inline">
          <li class="list-inline-item">
            <a href="/products?view=table&search=<%= search %>" class="btn btn-outline-secondary">
              <i class="bi bi-table"></i> Vista en Tabla
            </a>
          </li>
          <li class="list-inline-item">
            <a href="/products?view=card&search=<%= search %>" class="btn btn-outline-secondary">
              <i class="bi bi-grid"></i> Vista en Cartas
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
<table class="container pb-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>TÃ­tulo</th>
            <th class="price">Precio</th>
            <th class="href">Enlace</th>
            <th class="src">Image</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %> 
            <tr>
                <td><%= product.Producto.Id %></td>
                <td><%= product.Producto.Titulo %></td>
                <td><%= product.Producto.Signo %><%= product.Producto.Precio %></td>
                <td class="itemVerProducto"><a href="<%= product.Producto.Href %>">Ver Producto</a></td>
                <td class="itemImage"><img src="<%= product.Producto.Imagen %>" alt="<%= product.Producto.Titulo %>"></td>
            </tr>
        <% }); %>
    </tbody>
</table>